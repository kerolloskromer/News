<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@+id/navigation_articles">

    <fragment
        android:id="@+id/navigation_articles"
        android:name="com.kromer.news.presentation.ui.main.list.ArticlesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_articles">
        <action
            android:id="@+id/action_navigation_articles_to_details"
            app:destination="@id/navigation_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_details"
        android:name="com.kromer.news.presentation.ui.main.details.DetailsFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="article"
            app:argType="com.kromer.news.domain.model.Article" />
    </fragment>

</navigation>